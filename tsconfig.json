{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "newLine": "LF",
        "locale": "en-us",
        "charset": "utf-8",
        "rootDir": "./src",
        "baseUrl": "./",
        "module": "commonjs",
        "reactNamespace": "React",
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "noEmit": false,
        "allowJs": false,
        "listFiles": false,
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "listEmittedFiles": false,
        "preserveConstEnums": true,
        "allowUnusedLabels": false,
        "noUnusedParameters": true,
        "skipDefaultLibCheck": false,
        "noImplicitUseStrict": false,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": false,
        "suppressImplicitAnyIndexErrors": false,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ]
    },
    "compileOnSave": false,
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        ".git",
        ".idea",
        ".vscode",
        ".gitignore",
        "README",
        "README.md",
        "node_modules"
    ]
}